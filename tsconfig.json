{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": false,
    "strict": false,
    "noEmit": true
  },
  "include": ["lib/**/*", "behaviors/**/*"],
  "exclude": ["internal/**/*"]
}
